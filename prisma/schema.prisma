generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  createdAt DateTime
  tasks Task[]
}

model Task {
  id          String   @id
  description String
  createdAt   DateTime
  completed   Boolean
  user User @relation(fields: [userId], references: [id])
  userId String
}
